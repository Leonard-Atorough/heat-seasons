{
  "name": "heat-seasons",
  "version": "1.0.0",
  "private": true,
  "description": "Heat boardgame leaderboard application",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup:all": "cd packages/shared && npm install && cd ../backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "backend": "npm run dev -w backend",
    "frontend": "npm run dev -w frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "heat",
    "boardgame",
    "leaderboard"
  ],
  "author": "",
  "license": "ISC"
}
